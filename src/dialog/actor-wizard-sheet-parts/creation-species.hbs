<h1 class="norse">
  {{localize "RQG.ActorCreation.Nav.0-Species"}}
</h1>

<div class="item-sheet-properties">
  <label>{{localize "RQG.ActorCreation.Step0.ChooseSpecies"}}:</label>
  <select name="selectedSpeciesTemplateId">
    {{#select species.selectedSpeciesTemplate.id}}
    <option value="">{{localize "RQG.ActorCreation.Step0.ChooseSpecies"}}</option>
    {{#each species.speciesTemplates}}
    <option value="{{this.id}}">{{this.name}}</option>
    {{/each}}
    {{/select}}
  </select>
  <label>{{localize "RQG.ActorCreation.Step0.SpeciesDescription"}}:</label>
  <div>
    {{#if species.selectedSpeciesTemplate.data.data.background.speciesRqidLink}}
    {{> "systems/rqg/items/sheet-parts/rqidLink.hbs"
      rqidLink=species.selectedSpeciesTemplate.data.data.background.speciesRqidLink
    }}
    {{/if}}
  </div>

</div>

<div>
  <h2 class="norse">{{species.selectedSpeciesTemplate.name}}</h2>
  <div class="characteristics" style="margin-bottom: 0.75rem;">
    <div class="flex-column">
      <label class="norse">{{localize "RQG.Actor.Characteristics.strength"}}</label>
      {{species.selectedSpeciesTemplate.data.data.characteristics.strength.formula}}
    </div>
    <div class="flex-column">
      <label class="norse">{{localize "RQG.Actor.Characteristics.constitution"}}</label>
      {{species.selectedSpeciesTemplate.data.data.characteristics.constitution.formula}}
    </div>
    <div class="flex-column">
      <label class="norse">{{localize "RQG.Actor.Characteristics.size"}}</label>
      {{species.selectedSpeciesTemplate.data.data.characteristics.size.formula}}
    </div>
    <div class="flex-column">
      <label class="norse">{{localize "RQG.Actor.Characteristics.dexterity"}}</label>
      {{species.selectedSpeciesTemplate.data.data.characteristics.dexterity.formula}}
    </div>
    <div class="flex-column">
      <label class="norse">{{localize "RQG.Actor.Characteristics.intelligence"}}</label>
      {{species.selectedSpeciesTemplate.data.data.characteristics.intelligence.formula}}
    </div>
    <div class="flex-column">
      <label class="norse">{{localize "RQG.Actor.Characteristics.power"}}</label>
      {{species.selectedSpeciesTemplate.data.data.characteristics.power.formula}}
    </div>
    <div class="flex-column">
      <label class="norse">{{localize "RQG.Actor.Characteristics.charisma"}}</label>
      {{species.selectedSpeciesTemplate.data.data.characteristics.charisma.formula}}
    </div>
  </div>

  <details class="title-bar-details" open>
    <summary class="title-bar-summary title-bar-head-2">
      <div class="title-bar-summary-content">
        {{localize "RQG.ActorCreation.Step0.BackgroundAndNotes"}}
      </div>
    </summary>
  
    {{{enrichHtml species.selectedSpeciesTemplate.data.data.background.biography}}}
   
  </details>

  <details class="title-bar-details">
    <summary class="title-bar-summary title-bar-head-2">
      <div class="title-bar-summary-content">
        {{localize "RQG.ActorCreation.AdvancedOptions"}}
      </div>
    </summary>

    <nav class="species-tabs item-sheet-nav-tabs tabs" data-group="species-item-selection">
      <a class="item" data-group="species-item-selection" data-tab="skills">
        {{localize "RQG.ActorCreation.SkillsTab"}}
      </a>
      <a class="item" data-group="species-item-selection" data-tab="runes">
        {{localize "RQG.ActorCreation.RunesTab"}}
      </a>
      <a class="item" data-group="species-item-selection" data-tab="passions">
        {{localize "RQG.ActorCreation.PassionsTab"}}
      </a>
    </nav>

    <section class="species-body">

      <div class="tab skills" data-group="species-item-selection" data-tab="skills">
        <h2 class="norse">{{localize "RQG.ActorCreation.Step0.SelectSpeciesSkills"}}</h2>
        {{> "systems/rqg/actors/sheet-parts/skills-tab.hbs"
        ownedItems=speciesTemplateItems
        wizard="true"
        checkedProperty="speciesPresent"
        forChoice="species"
        }}
      </div>
      <div class="tab runes" data-group="species-item-selection" data-tab="runes">
        <h2 class="norse">{{localize "RQG.ActorCreation.Step0.SelectSpeciesRunes"}}</h2>
        <div class="flex-row flex-wrap">
          {{>"systems/rqg/actors/sheet-parts/runes-elemental.hbs"
          ownedItems=speciesTemplateItems
          wizard="true"
          forChoice="species"
          checkedProperty="speciesPresent"
          }}
          {{>"systems/rqg/actors/sheet-parts/runes-power.hbs"
          ownedItems=speciesTemplateItems
          wizard="true"
          forChoice="species"
          checkedProperty="speciesPresent"
          }}
          {{>"systems/rqg/actors/sheet-parts/runes-form.hbs"
          ownedItems=speciesTemplateItems
          wizard="true"
          forChoice="species"
          checkedProperty="speciesPresent"
          }}
          {{>"systems/rqg/actors/sheet-parts/runes-condition.hbs"
          ownedItems=speciesTemplateItems
          wizard="true"
          forChoice="species"
          checkedProperty="speciesPresent"
          }}
        </div>

      </div>
      <div class="tab passions" data-group="species-item-selection" data-tab="passions">
        <h2 class="norse">{{localize "RQG.ActorCreation.Step0.SelectSpeciesPassions"}}</h2>
        {{> "systems/rqg/actors/sheet-parts/passions-tab.hbs"
        ownedItems=speciesTemplateItems
        wizard="true"
        checkedProperty="speciesPresent"
        forChoice="species"
        }}
      </div>
    </section>
  </details>
</div>
