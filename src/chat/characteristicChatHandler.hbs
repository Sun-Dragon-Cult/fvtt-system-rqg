<form>
  <div class="rqg chat-content characteristic-chat">
    <h2>{{chatHeading}}</h2>

    <select data-handle-change name="difficulty">
      {{selectOptions difficultyOptions selected=formData.difficulty}}
    </select><br>

    <label>{{localize "RQG.Dialog.Common.OtherModifiers"}}
      <input data-handle-change class="chat-number-input" type="text" value="{{formData.modifier}}" name="modifier">
    </label>

    <button data-chat-roll>{{localize "RQG.Dialog.Common.RollFormat" chance=chance}}</button>
  </div>
</form>
