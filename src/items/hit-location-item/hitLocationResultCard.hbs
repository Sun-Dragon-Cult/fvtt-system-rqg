<div class="rqg chat-content hit-location-chat">
    <h3>Rolled a {{localize (concat "RQG.Item.HitLocation.Modifier." modifier)}} Hit Location for {{actor.name}}</h3>

    {{#if actor.system.characteristics.constitution.value}}
    <div class="flex-row nowrap flex-align-center">
      <label>{{localize "RQG.Actor.Health.TotalHitPoints"}}
        {{actor.system.attributes.hitPoints.value}}
        / {{actor.system.attributes.hitPoints.max}}
      </label>
      <label class="text-right">{{localize "RQG.Actor.Health.HealingRatePerWeek" healingRate=actor.system.attributes.healingRate }}</label>
    </div>
    {{/if}}

    <div class="grid hit-location item-list">
        <div class="headings"></div>
        <div class="head1"></div>
        <div class="head2"></div>
        <div class="head3"></div>
        <div class="head4">
        {{localize "RQG.Actor.Health.HitLocation"}}
        </div>
        <div class="head5 text-right"><span>{{localize "RQG.Actor.Health.ArmorPointsAbbr"}}</span></div>
        <div class="head6 text-right"><span>{{localize "RQG.Actor.Health.HitPointsAbbr"}}</span></div>
        <div class="head7 text-right">{{localize "RQG.Actor.Health.Wounds"}}</div>

        <div class="hit-location contextmenu item" data-item-id="{{hitLocation.id}}">
            <span class="text-right no-wrap" style="width: 15px;">{{hitLocation.system.dieFrom}}</span>
        </div>
        <div class="hit-location contextmenu item" data-item-id="{{hitLocation.id}}">-</div>
        <div class="hit-location contextmenu item" data-item-id="{{hitLocation.id}}">
            <span class="text-right no-wrap" style="width: 15px;">{{hitLocation.system.dieTo}}</span>
        </div>
        <div class="hit-location contextmenu item" data-item-id="{{hitLocation.id}}">
          {{hitLocation.name}}
          {{#unless (eq hitLocation.system.hitLocationHealthState "healthy")}}
            <i class="health-state">&nbsp;{{toLowerCase (localize (concat "RQG.Item.HitLocation.HealthStatusEnum." hitLocation.system.hitLocationHealthState))}}</i>
          {{/unless}}
        </div>
        <div class="hit-location contextmenu item" data-item-id="{{hitLocation.id}}"><span class="text-right">{{hitLocation.system.armorPoints}}</span></div>
        <div class="hit-location contextmenu item" data-item-id="{{hitLocation.id}}"><span class="text-right nowrap{{#unless (eq hitLocation.system.hitPoints.value hitLocation.system.hitPoints.max)}} strike{{/unless}}">{{hitLocation.system.hitPoints.max}}</span>{{#unless (eq hitLocation.system.hitPoints.value hitLocation.system.hitPoints.max)}} <span class="text-right">{{hitLocation.system.hitPoints.value}}</span>{{/unless}}</div>
        <div class="hit-location contextmenu item" data-item-id="{{hitLocation.id}}">
          <div data-item-heal-wound title="{{localize "RQG.Actor.Health.HealWound"}}" class="text-right nowrap">
            {{#each hitLocation.system.wounds}}
            <i class="fas fa-notes-medical"></i> {{this}}
            {{/each}}
          </div>
          <div class="ml-5 text-right" title="{{localize "RQG.Actor.Health.AddWound"}}" data-item-add-wound><i class="fas fa-hand-holding-medical"></i></div>
        </div>

    </div>    
</div>
