{{#unless isEmbedded}}
<h2>
    <span class="flex-row">
    {{localize "RQG.Foundry.ActiveEffect.Header"}}
    <a title="{{localize "RQG.Foundry.ActiveEffect.AddEffectTitle"}}" data-item-id="{{data._id}}" data-item-effect-add><i class="fas fa-plus"></i></a>
    </span>
</h2>

<table data-item-id="{{data._id}}">
  <thead>
  <tr>
    <th class="text-left">{{localize "RQG.Foundry.ActiveEffect.Label"}}</th>
    <th class="text-left">{{localize "RQG.Foundry.ActiveEffect.Disabled"}}</th>
    <th class="text-left">{{localize "RQG.Foundry.ActiveEffect.StartTime"}}</th>
    <th class="text-left">{{localize "RQG.Foundry.ActiveEffect.KeyValueMode"}}</th>
    <th class="text-left"></th>
  </tr>
  </thead>
  {{#each data.effects}}
    <tbody data-effect-id="{{_id}}">
    <tr>
      <td><a data-item-effect-edit>{{label}}</a></td>
      <td><a data-item-effect-edit>{{yes-no disabled}}</a></td>
      <td><a data-item-effect-edit>{{duration.startTime}}</a></td>
      <td><a data-item-effect-edit>
        {{#each changes}}
          {{key}} - {{value}} - {{mode}}<br>
        {{/each}}</a></td>
      <td class="text-right"><a title="Delete Effect" data-item-effect-delete><i class="fas fa-trash"></i></a></td>
      <td></td>
    </tr>

    </tbody>
  {{/each}}
</table>
{{/unless}}
