<form autocomplete="off">
  <header class="item-sheet-header">
    <img src="{{img}}" data-edit="img" title="{{name}}">

    <div class="flex-column gap03rem">

      <div class="property-line">
        <div class="label-above">
          <label for="name-{{id}}">{{localize "RQG.Item.Cult.Name"}}</label>
          <input
            id="name-{{id}}"
            type="text"
            name="name"
            value="{{name}}"
            placeholder="{{localize "RQG.Item.Cult.Name"}}"
          />
        </div>

        <div class="label-above long">
          <label for="tagline-{{id}}">{{localize "RQG.Item.Cult.CultTagline"}}</label>
          <input
            id="tagline-{{id}}"
            type="text"
            name="system.tagline"
            value="{{system.tagline}}"
            placeholder="{{localize "RQG.Item.Cult.CultTagline"}}"
          />
        </div>
      </div>

      {{> "systems/rqg/items/sheet-parts/rqidLinkTarget.hbs"
        rqidLink=system.descriptionRqidLink
        parentField="descriptionRqidLink"
        dropTypes="JournalEntry"
        showDeleteFromPropertyName="descriptionRqidLink"
        showInfoCircleConnect="RQG.Item.RqgItem.ShowInfoCircle.DropToConnectJournal"
        showInfoCircleReplace="RQG.Item.RqgItem.ShowInfoCircle.DropToReplaceJournal"
      }}
    </div>
  </header>
  <main>
    {{! Sheet Tab Navigation }}
    <nav class="item-sheet-nav-tabs" data-group="primary">
      {{#if isEmbedded}}
        <a class="item" data-tab="cult-standing">{{localize "RQG.Item.SheetTab.CultStanding"}}</a>
      {{/if}}
      <a class="item" data-tab="cult">{{localize "RQG.Item.SheetTab.Cult"}}</a>
    </nav>

    <section class="sheet-body">
      {{! Cult Standing Tab }}
      <div class="tab" data-group="primary" data-tab="cult-standing">
        <div class="item-sheet-properties">
          <label for="rune-points-value-{{id}}">{{localize "RQG.Item.Cult.RunePoints"}}</label>
          <div>
            <input
              id="rune-points-value-{{id}}"
              name="system.runePoints.value"
              value="{{system.runePoints.value}}"
              type="number"
              min="0"
              max="99"
            /> / <input
            id="rune-points-max-{{id}}"
            name="system.runePoints.max"
            value="{{system.runePoints.max}}"
            type="number"
            min="0"
            max="99"
          />
          </div>

          <label for="cult-rank-{{id}}">{{localize "RQG.Item.Cult.CultRank"}}</label>
          <select name="system.rank">
            {{#select system.rank}}
              {{#each ranksEnum}}
                <option value="{{this}}">{{localize
                  (concat "RQG.Actor.RuneMagic.CultRank." this)
                }}</option>
              {{/each}}
            {{/select}}
          </select>

          <label class="editor-label">{{localize "RQG.Item.Cult.ActorsGifts"}}</label>
          <div class="editor-container">
            {{editor
              enrichedGifts
              target="system.gifts"
              button=true
              editable=isEditable
            }}
          </div>

          <label class="editor-label">{{localize "RQG.Item.Cult.ActorsGeases"}}</label>
          <div class="editor-container">
            {{editor
              enrichedGeases
              target="system.geases"
              button=true
              editable=isEditable
            }}
          </div>

          <label class="editor-label">{{localize "RQG.Item.Cult.ActorsSubCults"}}</label>
          <div class="editor-container">
            {{editor
              enrichedSubCults
              target="system.subCults"
              button=true
              editable=isEditable
            }}
          </div>

        </div>
      </div>

      {{! Cult Tab }}
      <div class="tab" data-group="primary" data-tab="cult">
        <div class="item-sheet-properties">
          <label for="runes-{{id}}">{{localize "RQG.Item.Cult.Runes"}}</label>
          <div class="img-name-grid bordered">
            {{#each system.runes}}
              <img class="rune" src="{{runeImg this}}" title="{{this}}">
              <input type="text" name="system.runes" value="{{this}}">
            {{/each}}
            <input
              id="runes-{{id}}"
              placeholder="{{localize 'RQG.Item.Cult.AddNewRunePlaceholder'}}"
              name="system.runes"
              type="text"
              list="allRunes"
              style="grid-column: 1 / span 2;">
          </div>

          <label class="editor-label">{{localize "RQG.Item.Cult.HolyDays"}}</label>
          <div class="editor-container">
            {{editor
              enrichedHolyDays
              target="system.holyDays"
              button=true
              editable=isEditable
            }}
          </div>
        </div>
      </div>
    </section>
  </main>
  <datalist id="allRunes">
    {{#each allRunes}}
      <option value="{{name}}">{{name}}</option>
    {{/each}}
  </datalist>
</form>
