<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{data.img}}" data-edit="img" title="{{data.name}}">
    <input type="text" name="name" value="{{data.name}}">

    <label>{{localize "RQG.Item.Gear.EncumbranceAbbr"}} <input type="number" min="0" max="999999" name="data.encumbrance" value="{{gearData.encumbrance}}"></label><br>
    <select name="data.equippedStatus">
      {{#select gearData.equippedStatus}} {{#each sheetSpecific.equippedStatuses}}
      <option value="{{this}}">{{localize (concat "RQG.Item.EquippedStatus." this)}}</option>
      {{/each}} {{/select}}
    </select>
  </header>
  <main>
    <label>{{localize "RQG.Item.Gear.PriceReal"}} <input type="number" min="0" max="99999999" name="data.price.real" value="{{gearData.price.real}}">{{localize "RQG.Item.Gear.LunarsAbbr"}}</label><br>
    <label>{{localize "RQG.Item.Gear.PriceEstimated"}} <input type="number" min="0" max="99999999" name="data.price.estimated" value="{{gearData.price.estimated}}">{{localize "RQG.Item.Gear.LunarsAbbr"}}</label><br>
    <label>{{localize "RQG.Item.Gear.Location"}} <input type="text" name="data.location" value="{{gearData.location}}"></label><br>
    <label>{{localize "RQG.Item.Gear.AttunedTo"}} <input type="text" name="data.attunedTo" value="{{gearData.attunedTo}}"></label><br>
    <label><input type="checkbox" name="data.isContainer" {{checked gearData.isContainer}}>{{localize "RQG.Item.Gear.IsContainerQ"}}</label><br>

    <select name="data.physicalItemType">
      {{#select gearData.physicalItemType}} {{#each sheetSpecific.physicalItemTypes}}
      <option value="{{this}}">{{this}}</option>
      {{/each}} {{/select}}
    </select>
    {{#unless (eq gearData.physicalItemType "unique")}}
      <label>{{localize "RQG.Item.Gear.Quantity"}} <input type="number" min="0" max="9999999" name="data.quantity" value="{{gearData.quantity}}"></label>
    {{/unless}}
    <br>
    <label>{{localize "RQG.Item.Gear.Description"}} {{editor content=gearData.description target="data.description"
      button=true owner=owner editable=editable}}
    </label><br>
    <label>{{localize "RQG.Item.Gear.GMNotes"}} {{editor content=gearData.gmNotes target="data.gmNotes"
      button=true owner=owner editable=editable}}
    </label>
    <br>{{> "systems/rqg/items/sheet-parts/itemActiveEffects.hbs"}}
  </main>
</form>
