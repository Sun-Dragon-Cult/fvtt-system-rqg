<h2 class="flex-row">
  <span>
    <button class="sort" data-sort-items="passion" data-tooltip="{{localize "RQG.UI.SortItems"}}"><i class="fas fa-arrow-down-a-z"></i></button>
    {{localize 'RQG.Actor.Passion.Passions'}}
  </span>
  <a data-tooltip="{{localize 'RQG.Actor.Passion.AddNewPassionTip'}}" data-passion-add><i class="fas fa-plus"></i></a>
</h2>

<div class="grid passions item-list">
  {{#each embeddedItems.passion}}
  <div class="grid 
  
          {{#edit-mode @root/system.editMode "all"}}
            passion-edit-mode 
          {{else}}
            {{#if ../wizard}}
              passion-select
            {{else}}
              passion
            {{/if}}
          {{/edit-mode}}
          item">
    <div data-item-id="{{id}}" data-item-roll class="passion contextmenu img item"
      data-tooltip="{{localize 'RQG.Game.RollTitle'}}">
      {{#if ../wizard}}
      <div>
        <input type="checkbox"
          class="wizard-choice-input"
          data-rqid="{{flags.rqg.documentRqidFlags.id}}"
          data-for-choice="{{../forChoice}}"
          {{#if (lookup system.choice ../checkedProperty)}}checked{{/if}}
          data-tooltip="{{localize "RQG.Actor.Passion.ImportPassionCheckboxTitle" passionName=name}}" />
      </div>
      {{/if}}
      <img src="{{img}}">
    </div>
    <div data-item-id="{{id}}" data-item-roll class="passion contextmenu item"
      data-tooltip="{{localize 'RQG.Game.RollTitle'}}">
      {{name}}
    </div>
    {{#edit-mode @root/system.editMode "all"}}
      <div class="passion
                  contextmenu
                  item"
                  width="50px">
        <input type="number"
          data-passion-grid-edit
          data-item-id="{{../id}}"
          value="{{../system.chance}}">%
      </div>
    {{/edit-mode}}
    <div data-item-id="{{id}}" data-item-roll
      class="passion contextmenu item {{experiencedclass uuid}}"
      data-tooltip="{{localize 'RQG.Game.RollTitle'}}">
      {{system.chance}}%
    </div>
    <details data-item-id="{{id}}" class="description passion contextmenu item">
      <summary>{{localize "RQG.Actor.Passion.BackStory"}}</summary>{{{system.enrichedDescription}}}
    </details>
  </div>
  {{/each}}
</div>
