{{#unless (isEmptyObject embeddedItems.rune.power)}}
  <div class="grid {{#if wizard}}opposed-rune-select{{else}}opposed-rune{{/if}} item-list">
    <h2 class="fullrow">{{localize 'RQG.Actor.Rune.Power'}}</h2>

    {{#with embeddedItems.rune.power.fertility}}
      {{> actorRuneGrid
        rune=this
        wizard=../wizard
        forChoice=../forChoice
        checkedProperty=../checkedProperty}}
    {{/with}}
