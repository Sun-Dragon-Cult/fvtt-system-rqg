    {{#with embeddedItems.rune.power.disorder}}
      {{> actorRuneGrid
        rune=this
        wizard=../wizard
        forChoice=../forChoice
        checkedProperty=../checkedProperty}}
    {{/with}}

    {{#with embeddedItems.rune.power.truth}}
      {{> actorRuneGrid
        rune=this
        wizard=../wizard
        forChoice=../forChoice
        checkedProperty=../checkedProperty}}
    {{/with}}
