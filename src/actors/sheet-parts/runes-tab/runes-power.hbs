    {{#with embeddedItems.rune.power.death}}
      {{> actorRuneGrid
        rune=this
        wizard=../wizard
        forChoice=../forChoice
        checkedProperty=../checkedProperty}}
    {{/with}}

    {{#with embeddedItems.rune.power.harmony}}
      {{> actorRuneGrid
        rune=this
        wizard=../wizard
        forChoice=../forChoice
        checkedProperty=../checkedProperty}}
    {{/with}}
