<form autocomplete="off">
  <div class="mainbackground"></div>
  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img {{#if (eq img "icons/svg/mystery-man.svg")}}unset{{/if}}" src="{{img}}" data-edit="img" data-tooltip="{{name}}">
    <div>
      <div class="topheaderline">
        <h1 class="charname"><input name="name" type="text" value="{{name}}"></h1>
        <div class="flex-row gap1rem">
          {{#unless (eq system.attributes.health "healthy")}}<i>{{localize (concat "RQG.Actor.Attributes.Health." system.attributes.health)}}</i>{{/unless}}
          {{#if characterElementRunes}}
            <div class="flex-row gap01rem">
              {{#each characterElementRunes}}
                <div class="rune contextmenu item" data-item-id="{{id}}">
                  <img class="rune" src="{{img}}" {{#if descriptionRqid}} data-rqid-link="{{descriptionRqid}}"{{/if}}>
                </div>
              {{/each}}
            </div>
          {{/if}}
          {{#if characterPowerRunes}}
            <div class="flex-row gap01rem">
              {{#each characterPowerRunes}}
              <div class="rune contextmenu item" data-item-id="{{id}}">
                <img class="rune" src="{{img}}" {{#if descriptionRqid}} data-rqid-link="{{descriptionRqid}}"{{/if}}>
              </div>
              {{/each}}
            </div>
          {{/if}}
          {{#if characterFormRunes}}
            <div class="flex-row gap01rem">
              {{#each characterFormRunes}}
              <div class="rune contextmenu item" data-item-id="{{id}}">
                <img class="rune" src="{{img}}" {{#if descriptionRqid}} data-rqid-link="{{descriptionRqid}}"{{/if}}>
              </div>
              {{/each}}
            </div>
          {{/if}}
        </div>
      </div>
      <div class="characteristics">
        {{#each system.characteristics as | characteristic key |}}
        <div data-characteristic="{{key}}" class="flex-column {{#if characteristic.hasExperience}}experienced{{/if}}">
          <label class="resource-label norse characteristic contextmenu" data-characteristic-roll data-characteristic-name="{{key}}">{{localize (concat 'RQG.Actor.Characteristics.' key)}}</label>
          {{#if @root.isGM}}
            <input type="number" min="0" max="99" name="system.characteristics.{{key}}.value" value="{{characteristic.value}}">
            <input type="text" name="system.characteristics.{{key}}.formula" value="{{characteristic.formula}}">
          {{else}}
            <div class="value characteristic contextmenu" data-characteristic-roll>{{characteristic.value}}</div>
          {{/if}}
        </div>
        {{/each}}
      </div>
      <div class="thirdline">
        {{#if baseStrikeRank includeZero=true}}
          <div>
            <div class="norse text-center">{{localize "RQG.Actor.Attributes.StrikeRank"}} <span class="large-font">{{baseStrikeRank}}</span></div>
            <div class="flex-row">
              {{#if system.attributes.dexStrikeRank includeZero=true}}<span class="norse text-center">{{localize "RQG.Actor.Attributes.DexterityAbbr"}} {{system.attributes.dexStrikeRank}}</span>{{/if}}
              {{#if system.attributes.sizStrikeRank includeZero=true}}<span class="norse text-center">{{localize "RQG.Actor.Attributes.SizeAbbr"}} {{system.attributes.sizStrikeRank}}</span>{{/if}}
            </div>
          </div>
        {{/if}}
        <div>
          <label class="flex-row flex-align-center">
            <span>{{localize "RQG.Actor.Attributes.MagicPoints"}}</span>
            <span class="nowrap">
              <input type="number" min="0" max="99" name="system.attributes.magicPoints.value" value="{{system.attributes.magicPoints.value}}" size="2"
              > / {{system.attributes.magicPoints.max}}
            </span>
          </label>
          <i class="norse flex-row flex-align-center">{{#each powCrystals}}<span class="mp-ellipses">{{name}}</span> {{size}}&nbsp;MP<br>{{/each}}</i>
          {{#if isGM}}
            <label><input type="checkbox" name="system.attributes.isCreature" {{checked system.attributes.isCreature}}>{{localize "RQG.Actor.Attributes.CreatureQ"}}</label>
          {{/if}}
        </div>
        <fieldset class="mov-enc">
          <legend>{{localize (concat "RQG.Actor.Attributes.MoveMode." system.attributes.move.currentLocomotion)}}</legend>
          <div class="flex-column">
            {{#if (or isGM system.attributes.move.walk.value)}}
              <label class="nowrap"><input type="radio" name="system.attributes.move.currentLocomotion" value="walk" {{checked (eq "walk" system.attributes.move.currentLocomotion)}}> <i class="fas fa-walking "></i></label>
            {{/if}}
            {{#if (or isGM system.attributes.move.swim.value)}}
              <label class="nowrap"><input type="radio" name="system.attributes.move.currentLocomotion" value="swim" {{checked (eq "swim" system.attributes.move.currentLocomotion)}}> <i class="fas fa-swimmer fa-flip-horizontal"></i></label>
            {{/if}}
            {{#if (or isGM system.attributes.move.fly.value)}}
              <label class="nowrap"><input type="radio" name="system.attributes.move.currentLocomotion" value="fly" {{checked (eq "fly" system.attributes.move.currentLocomotion)}}> <i class="fas fa-dove"></i></label>
            {{/if}}
          </div>
        {{#if system.attributes.encumbrance.max}}
          <div>
            <div class="norse nowrap">{{localize "RQG.Actor.Attributes.MovementAbbr"}}
              <img class="equipped-status" src="systems/rqg/assets/images/equipped/equipped.svg"> {{localize "RQG.Actor.Attributes.EncumbranceAbbr"}}
            </div>
            <div class="flex-row nowrap {{#if (gt system.attributes.encumbrance.equipped system.attributes.encumbrance.max)}}warning{{/if}}">
              <span>{{system.attributes.move.equipped}}</span> • <span>{{system.attributes.encumbrance.equipped}} / {{system.attributes.encumbrance.max}}</span>
            </div>
          </div>
        {{/if}}
        {{#if system.attributes.encumbrance.max}}
          <div>
            <div class="norse nowrap">{{localize "RQG.Actor.Attributes.MovementAbbr"}} <img class="equipped-status" src="systems/rqg/assets/images/equipped/carried.svg"> {{localize "RQG.Actor.Attributes.EncumbranceAbbr"}}</div>
            <div class="flex-row nowrap {{#if (gt system.attributes.encumbrance.travel system.attributes.encumbrance.max)}}warning{{/if}}">
              <span>{{system.attributes.move.travel}}</span> • <span>{{system.attributes.encumbrance.travel}} / {{system.attributes.encumbrance.max}}</span>
            </div>
          </div>
        {{/if}}
        <div>
        <div class="norse">{{localize "RQG.Actor.Attributes.MovementAbbr"}}</div>
        {{#if isGM}}
          {{#with (lookup system.attributes.move system.attributes.move.currentLocomotion) }}
            <div class="text-center"><input
              name="{{concat 'system.attributes.move.' @root.system.attributes.move.currentLocomotion '.value'}}"
              value="{{value}}"
              type="number"
              min="0"
              max="99"
              size="2"></div>
          {{/with}}
        {{else}}
          <div class="text-center">{{system.attributes.move.value}}</div>
        {{/if}}
      </div>
        {{#if system.attributes.encumbrance.max}}
        {{#if isGM}}
          <div>
            <div class="norse">{{localize "RQG.Actor.Attributes.EncumbranceFactor"}}</div>
              {{#with (lookup system.attributes.move system.attributes.move.currentLocomotion) }}
                <div class="text-center"><input
                  name="{{concat 'system.attributes.move.' @root.system.attributes.move.currentLocomotion '.carryingFactor'}}"
                  value="{{carryingFactor}}"
                  type="number"
                  min="0"
                  max="99"
                  size="2"></div>
              {{/with}}
          </div>
        {{/if}}
        {{/if}}

        </fieldset>
        {{#if isPC}}
          <div>
            <div class="norse">{{localize "RQG.Actor.Attributes.HeroPoints"}}</div>
            {{#if isGM}}
              <div class="text-center"><input type="number" min="0" max="99" name="system.attributes.heroPoints" value="{{system.attributes.heroPoints}}" size="2"></div>
            {{else}}
              <div class="text-center">{{system.attributes.heroPoints}}</div>
            {{/if}}
          </div>
        {{/if}}
      </div>
    </div>
  </header>

  <div class="navbackground"></div>
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item norse" data-group="primary" data-tab="combat">{{localize "RQG.Actor.Nav.Combat"}}</a>
    {{#if showUiSection.runes}}<a class="item norse" data-group="primary" data-tab="runes">{{localize "RQG.Actor.Nav.Runes"}}</a>{{/if}}
    {{#if showUiSection.spiritMagic}}<a class="item norse" data-group="primary" data-tab="spiritmagic">{{localize "RQG.Actor.Nav.SpiritMagic"}}</a>{{/if}}
    {{#if showUiSection.runeMagic}}<a class="item norse" data-group="primary" data-tab="runemagic">{{localize "RQG.Actor.Nav.RuneMagic"}}</a>{{/if}}
    {{#if showUiSection.sorcery}}<a class="item norse" data-group="primary" data-tab="sorcery">{{localize "RQG.Actor.Nav.Sorcery"}}</a>{{/if}}
    {{#if showUiSection.skills}}<a class="item norse" data-group="primary" data-tab="skills">{{localize "RQG.Actor.Nav.Skills"}}</a>{{/if}}
    {{#if showUiSection.gear}}<a class="item norse" data-group="primary" data-tab="gear">{{localize "RQG.Actor.Nav.Gear"}}</a>{{/if}}
    {{#if showUiSection.passions}}<a class="item norse" data-group="primary" data-tab="passions">{{localize "RQG.Actor.Nav.Passions"}}</a>{{/if}}
    {{#if showUiSection.background}}<a class="item norse" data-group="primary" data-tab="background">{{localize "RQG.Actor.Nav.Background"}}</a>{{/if}}
    {{#if showUiSection.activeEffects}}<a class="item norse" data-group="primary" data-tab="activeeffectstesting">{{localize "RQG.Actor.Nav.ActiveEffects"}}</a>{{/if}}
  </nav>

  <section class="sheet-body">
    <div class="tab combat" data-group="primary" data-tab="combat">
      <div class="flex-row flex-wrap">
        <div>
          {{> "systems/rqg/actors/sheet-parts/health.hbs" }}<br>
          {{> "systems/rqg/actors/sheet-parts/spirit-combat.hbs" }}
        </div>

        {{#if showUiSection.combat}}<div>{{> "systems/rqg/actors/sheet-parts/combat.hbs" }}</div>{{/if}}

        <div class="fullwidth">
          <h2>{{localize "RQG.Actor.Attributes.AlliesAndNotes"}}</h2>
          {{editor
            enrichedAllies
            target="system.allies"
            button=true
            editable=isEditable
          }}
        </div>
      </div>
    </div>

    {{#if showUiSection.runes}}
      <div class="tab runes" data-group="primary" data-tab="runes">
        {{> "systems/rqg/actors/sheet-parts/runes-tab.hbs" }}
      </div>
    {{/if}}

    {{#if showUiSection.spiritMagic}}
      <div class="tab spiritmagic" data-group="primary" data-tab="spiritmagic">
        {{> "systems/rqg/actors/sheet-parts/spirit-magic-tab.hbs" }}
      </div>
    {{/if}}

    {{#if showUiSection.runeMagic}}
      <div class="tab runemagic" data-group="primary" data-tab="runemagic">
        {{> "systems/rqg/actors/sheet-parts/rune-magic-tab.hbs" }}
      </div>
    {{/if}}

    {{#if showUiSection.sorcery}}
      <div class="tab sorcery" data-group="primary" data-tab="sorcery">
        {{> "systems/rqg/actors/sheet-parts/sorcery-tab.hbs" }}
      </div>
    {{/if}}

    {{#if showUiSection.skills}}
      <div class="tab skills" data-group="primary" data-tab="skills">
        {{> "systems/rqg/actors/sheet-parts/skills-tab.hbs" }}
      </div>
    {{/if}}

    {{#if showUiSection.gear}}
      <div class="tab gear" data-group="primary" data-tab="gear">
        {{> "systems/rqg/actors/sheet-parts/gear-tab.hbs" }}
      </div>
    {{/if}}

    {{#if showUiSection.passions}}
      <div class="tab passions" data-group="primary" data-tab="passions">
        {{> "systems/rqg/actors/sheet-parts/passions-tab.hbs" }}
      </div>
    {{/if}}

    {{#if showUiSection.background}}
      <div class="tab background" data-group="primary" data-tab="background">
        {{> "systems/rqg/actors/sheet-parts/background-tab.hbs" }}
      </div>
    {{/if}}

    {{#if showUiSection.activeEffects}}
      <div class="tab activeeffectstesting" data-group="primary" data-tab="activeeffectstesting">
        {{> "systems/rqg/actors/sheet-parts/activeeffects-debug-tab.hbs" }}
      </div>
    {{/if}}
  </section>
</form>
