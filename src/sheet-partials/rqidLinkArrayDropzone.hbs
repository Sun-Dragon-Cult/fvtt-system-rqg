{{!-- Partial Id: {{> rqidLinkArrayDropzone
Wrapper around an array of rqidLink to add dropzone event targets.

dropzoneData: string - ex "descriptionRqidLink"
dropDocumentNames: string - comma separated list of documents, ex. "JournalEntry, JournalEntryPage"
dropDocumentTypes: string - comma separated list of document types, ex: "rune,skill"

allowDuplicates: boolean - allow multiple copies of the same document
rqidLinkArray: RqidLink[]

Nested: {{> rqidLink
    rqidLink
    showDeleteFromPropertyName
    showInfoCircleConnect
    showInfoCircleReplace
    showBonus
    editBonusPropertyName

--}}

<div class="drop-target item-sheet-rqid-link"
     data-dropzone="{{dropzoneData}}"
     data-dropzone-document-names="{{dropDocumentNames}}"
     data-dropzone-document-types="{{dropDocumentTypes}}"
     {{#if allowDuplicates}}data-allow-duplicates="true"{{/if}}>
  <div style="display: flex; flex-wrap: wrap;">
    {{#each rqidLinkArray}}
      {{> rqidLink
        rqidLink=this
        showDeleteFromPropertyName=../showDeleteFromPropertyName
        showBonus=../showBonus
        editBonusPropertyName=../editBonusPropertyName
      }}
    {{/each}}
    {{#unless rqidLinkArray.length}}
      {{> rqidLink
        showInfoCircleConnect=showInfoCircleConnect
      }}
    {{/unless}}
  </div>
</div>
